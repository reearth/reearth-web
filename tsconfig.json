{
  "compilerOptions": {
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "jsx": "react",
    "lib": [
      "esnext",
      "dom"
    ],
    "module": "esnext",
    "moduleResolution": "node",
    "noImplicitReturns": true,
    "pretty": true,
    "sourceMap": true,
    "strict": true,
    "target": "esnext",
    "baseUrl": ".",
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "paths": {
      "@reearth/*": [
        "src/*"
      ],
      "*": [
        "src/@types/*"
      ]
    },
    "plugins": [
      {
        "name": "typescript-styled-plugin"
      }
    ]
  },
  "include": [
    "src",
    "node_modules/babel-plugin-react-intl-auto/**/*.d.ts"
  ]
}
